{
  "compilerOptions": {
    "jsx": "react-jsx",                 // Important for JSX
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "module": "ESNext",
    "target": "ES6",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
